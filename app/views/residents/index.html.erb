<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<div class="media">
      <div class="media-body">
        <table class="table table-hover table-condensed">
  <thead>
    <tr>
    <th>Surname</th>
    <th>First</th>
    <th>Email</th>
    <th>Phone#</th>
    </tr>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.surname %></td>
        <td><%= resident.first %></td>
        <td><%= resident.email %></td>
        <td><%= resident.phone %></td>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'X', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Member', new_resident_path, :class => "btn btn-small btn-danger" %>

<h3>Import Members</h3>
<%= form_tag import_residents_path, multipart: true do %>
  <%= file_field_tag :file %>
    <br>
  <%= submit_tag "Upload Members CSV File", :class => "btn btn-small btn-danger" %>
<% end %>


